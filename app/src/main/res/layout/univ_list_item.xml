<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/uni_list_item_height">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.7">

        <ImageView
            android:layout_width="@dimen/uni_list_item_image_size"
            android:layout_height="@dimen/uni_list_item_image_size"
            android:id="@+id/icon_view"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Московский государственный университет им. М. В. Ломоносова"
            android:id="@+id/name_view"
            android:layout_weight="1"
            android:gravity="fill_vertical"
            android:textSize="15sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Россия, Москва"
                android:id="@+id/location_view"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:paddingBottom="10sp"
                android:paddingLeft="5sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="87.5"
                android:id="@+id/mark_view"
                android:layout_weight="2"
                android:textSize="30sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>